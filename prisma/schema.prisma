generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_HOST")
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  password String
  // isGoogleAccount Boolean @default(false)
  // externalId String
  card     Card?
}

model Card {
  id             String         @id @default(uuid())
  owner          User           @relation(fields: [id], references: [id], onDelete: Cascade)
  slug           String         @unique
  fullName       String?         
  jobTitle       String?
  address        String? // Remove?
  photoUrl       String?
  primaryColor   String         @default("#ffffff")
  secondaryColor String         @default("#000000")
  bio            String?
  socials        SocialDetail[]
}

model SocialDetail {
  id         String @id @default(uuid())
  card       Card   @relation(fields: [cardId], references: [id], onDelete: Cascade )
  cardId     String
  socialName String 
  value      String

  @@unique([cardId,socialName])
}
